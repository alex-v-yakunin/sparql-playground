# ADRs with High Confidence
#
# Find architectural decisions with confidence level >= 0.90.
#
# Expected result: 4 ADRs (ADR-001, ADR-002, ADR-005, ADR-007)
# Execution time: < 1 second

PREFIX : <http://example.org/adr#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT ?adr ?label ?confidence ?status
WHERE {
    ?adr a :ADR ;                      # Find all ADRs
         rdfs:label ?label ;           # Get label
         :hasConfidence ?confidence ;  # Get confidence level
         :hasStatus ?status .          # Get status
    
    FILTER(?confidence >= 0.90)        # Filter: confidence >= 90%
}
ORDER BY DESC(?confidence)             # Sort from highest to lowest

# Explanation:
# These are well-validated and justified decisions.
# In SQL: WHERE confidence >= 0.90
# In SPARQL: FILTER with numeric comparison.
