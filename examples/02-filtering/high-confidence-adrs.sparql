# High Confidence ADRs
#
# Find ADRs with confidence score >= 0.90
# These are well-validated architectural decisions.
#
# Expected: 4 ADRs (ADR-001, ADR-002, ADR-005, ADR-007)
# Time: < 1 second

PREFIX : <http://example.org/adr#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT ?adr ?label ?confidence ?status
WHERE {
    ?adr a :ADR ;
         rdfs:label ?label ;
         :hasConfidence ?confidence ;
         :hasStatus ?status .
    
    FILTER(?confidence >= 0.90)
}
ORDER BY DESC(?confidence)

