# Deprecated ADRs
#
# Find architectural decisions that are no longer relevant.
#
# Expected result: 1 ADR (ADR-004: MongoDB for Payment History)
# Execution time: < 1 second

PREFIX : <http://example.org/adr#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT ?adr ?label ?technology ?confidence
WHERE {
    ?adr a :ADR ;                      # Find all ADRs
         rdfs:label ?label ;           # Get label
         :hasStatus :Deprecated ;      # Filter: only deprecated
         :decidesTechnology ?tech ;    # Get related technology
         :hasConfidence ?confidence .  # Get confidence level
    
    ?tech rdfs:label ?technology .     # Get technology label
}
ORDER BY ?adr                          # Sort by URI

# Explanation:
# Useful for understanding which approaches were rejected.
# In SQL: WHERE status = 'Deprecated'
# In SPARQL: filtering by status URI :Deprecated.
