# ADRs Only from Official Registry
#
# Query only the official ADR registry (highest quality source).
#
# Expected result: 4 ADRs (ADR-001, ADR-002, ADR-005, ADR-007)
# Execution time: < 1 second

PREFIX : <http://example.org/adr#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT ?adr ?label ?technology ?confidence
WHERE {
    GRAPH :adr-registry {              # Limit search to specific graph
        ?adr a :ADR ;                  # Find all ADRs in official registry
             rdfs:label ?label ;       # Get label
             :decidesTechnology ?tech ;    # Get technology
             :hasConfidence ?confidence .  # Get confidence level
    }
    
    ?tech rdfs:label ?technology .     # Get technology label (outside graph)
}
ORDER BY ?adr                          # Sort by URI

# Explanation:
# Use GRAPH to select data from specific named graph.
# GRAPH :adr-registry { ... } limits search to only this source.
# In SQL: WHERE source_id = 'official'
# In Property Graph: filtering by node labels or properties.
